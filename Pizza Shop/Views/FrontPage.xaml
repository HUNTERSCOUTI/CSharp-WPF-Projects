<UserControl x:Class="Pizza_Shop.Views.FrontPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizza_Shop.Views" 
        xmlns:viewmodels="clr-namespace:Pizza_Shop.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:FrontPageViewModel}"
        mc:Ignorable="d"
        Height="768" Width="1366"
        Background="{x:Null}">
    <Border
        BorderThickness="3"
        CornerRadius="30"
        Background="#252223">
        <Grid>
            <!-- Definitions -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Panel -->
            <Border Grid.ColumnSpan="4" Grid.Row="0" CornerRadius="30, 30, 0, 0"
                Height="85" Background="#FF1F1C1D" VerticalAlignment="Top">
                <Label Content="Front Page" Foreground="White" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Grid.ColumnSpan="1"
                   FontSize="45" Grid.Column="1">
                </Label>
            </Border>
            <Button Style="{StaticResource StartButtons}" Width="150" Margin="25,12,25,38"
                    Content="Log Out" Command="{Binding DataContext.NavigateToStartPageCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Left Panel -->
            <Border Grid.ColumnSpan="2" Grid.RowSpan="3" Grid.Row="1" CornerRadius="30" Margin="25, 0, 0, 0"
                Height="620" Width="350" Background="#FF1F1C1D" VerticalAlignment="Top">
                <ListBox ItemsSource="{Binding MenuPizzas}" Background="{x:Null}"
                         Height="600" Width="330" Foreground="White" HorizontalContentAlignment="Stretch"
                         BorderBrush="{x:Null}" Name="defaultPizzasMenu">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0">
                                    <TextBlock Style="{StaticResource PizzaTitle}" Text="{Binding Title}"/>
                                    <TextBlock Style="{StaticResource PizzaTitle}" Text="{Binding Price, StringFormat=' - ${0}'}"/>
                                </StackPanel>
                                <TextBlock Style="{StaticResource PizzaDesc}" Text="{Binding JoinedToppings}" 
                                           Grid.Column="0" Grid.Row="1"/>

                                <Button Click="Basket_Add" Grid.Column="1" Style="{StaticResource MenuBtn}"
                                        Height="27"/>
                                
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>


            <!-- Center Panel -->
            <Border Grid.Column="2" Grid.RowSpan="2" Grid.Row="1" CornerRadius="30"
                Height="620" Width="500" Background="#FF1F1C1D" VerticalAlignment="Top">
                <ListBox ItemsSource="{Binding MenuPizzas}" Background="{x:Null}"
                         Height="590" Width="470" Foreground="White" HorizontalContentAlignment="Stretch"
                         BorderBrush="{x:Null}" Name="customPizzasMenu">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                

                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
            
            <StackPanel Grid.Column="2" Grid.Row="1">
                <CheckBox Name="Cheese" IsChecked="True"
                          Checked="CheeseOn" Unchecked="CheeseOff">
                    <TextBlock Text="Cheese" Height="17" Foreground="White"/>
                </CheckBox>
                <StackPanel Margin="20, 5, 0, 0">
                    <CheckBox Name="CheeseFull" IsChecked="True" 
                              Checked="CheeseFullOn" Unchecked="CheeseFullOff">
                        <TextBlock Text="Full" Height="17" Foreground="White"/>
                    </CheckBox>

                    <CheckBox Name="CheeseHalf" IsChecked="False"
                              Checked="CheeseHalfOn" Unchecked="CheeseHalfOff">
                        <TextBlock Text="Half" Height="17" Foreground="White"/>
                    </CheckBox>

                    <CheckBox Name="CheeseLittle" IsChecked="False" Foreground="White"
                              Checked="CheeseLittleOn" Unchecked="CheeseLittleOff">
                        <TextBlock Text="Little" Height="17" Foreground="White"/>
                    </CheckBox>
                </StackPanel>
            </StackPanel>


            <!-- Right Panel -->
            <Border Grid.ColumnSpan="2" Grid.RowSpan="3" Grid.Column="3" Grid.Row="1" CornerRadius="30" Margin="0, 0, 25, 0"
                Height="550" Width="350" Background="#FF1F1C1D" VerticalAlignment="Top">
                <ListBox ItemsSource="{Binding BasketPizzas}" Background="{x:Null}" 
                         Height="530" Width="330" Foreground="White" HorizontalContentAlignment="Stretch"
                         BorderBrush="{x:Null}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0">
                                    <TextBlock Style="{StaticResource PizzaTitle}" Text="{Binding Title}"/>
                                    <TextBlock Style="{StaticResource PizzaTitle}" Text="{Binding Price, StringFormat=' - ${0}'}"/>
                                </StackPanel>
                                <TextBlock Style="{StaticResource PizzaDesc}" Text="{Binding JoinedToppings}"
                                           Grid.Column="0" Grid.Row="1"/>

                                <Button Click="Basket_Remove" Grid.Column="1" Style="{StaticResource MenuBtn}"/>

                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>


            <!-- Bottom Right -->
            <TextBlock Name="finalPrice" Grid.Column="3" Grid.Row="2" Foreground="White"
                   Text="{Binding FinalPrice, StringFormat='${0}'}" FontSize="40"
                   VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 0, 0, 0"/>
            <Button Style="{StaticResource StartButtons}" Width="150" HorizontalAlignment="Right"
                    Content="Check Out" Grid.Column="3" Grid.Row="2" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

        </Grid>
    </Border>
</UserControl>
